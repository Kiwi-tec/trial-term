<%- include('partials/head', { title: 'Checkout - Cascadia' }) %>
<%- include('partials/header') %>

<div class="checkout-container">
    <div class="payment-form-container">
        <h1 class="checkout-title">Checkout</h1>
        
        <div class="checkout-steps">
            <div class="step">
                <div class="step-number">1</div>
                <span>Shipping</span>
            </div>
            <div class="step active">
                <div class="step-number">2</div>
                <span>Payment</span>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <span>Confirmation</span>
            </div>
        </div>
        
        <form id="paymentForm" action="index.html">
            <h2 class="section-title">Contact Information</h2>
            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <i class="fas fa-envelope form-icon"></i>
                <input type="email" id="email" class="form-control" placeholder="Email" required>
            </div>
            
            <h2 class="section-title">Shipping Address</h2>
            <div class="form-group">
                <label for="fullname" class="form-label">Full Name</label>
                <i class="fas fa-user form-icon"></i>
                <input type="text" id="fullname" class="form-control" placeholder="Full name" required>
            </div>
            
            <div class="form-group">
                <label for="address" class="form-label">Street Address</label>
                <i class="fas fa-home form-icon"></i>
                <input type="text" id="address" class="form-control" placeholder="Address" required>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="city" class="form-label">City</label>
                    <i class="fas fa-city form-icon"></i>
                    <input type="text" id="city" class="form-control" placeholder="City" required>
                </div>
                <div class="form-group">
                    <label for="zip" class="form-label">ZIP Code</label>
                    <i class="fas fa-map-pin form-icon"></i>
                    <input type="text" id="zip" class="form-control" placeholder="ZIP" required>
                </div>
            </div>
            
            <h2 class="section-title">Payment Method</h2>
            <div class="card-wrapper">
                <div class="card-header">
                    <input type="radio" name="payment-method" id="credit-card" checked class="card-radio">
                    <label for="credit-card" class="card-title">Credit Card</label>
                    <div class="card-icons">
                        <img src="https://cdn-icons-png.flaticon.com/128/349/349221.png" alt="Visa" class="card-icon">
                        <img src="https://cdn-icons-png.flaticon.com/128/349/349228.png" alt="Mastercard" class="card-icon">
                        <img src="https://cdn-icons-png.flaticon.com/128/349/349230.png" alt="American Express" class="card-icon">
                    </div>
                </div>
                <div class="card-details">
                    <div class="form-group">
                        <label for="cardNumber" class="form-label">Card Number</label>
                        <i class="fas fa-credit-card form-icon"></i>
                        <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" required>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="expiry" class="form-label">Expiry Date</label>
                            <i class="fas fa-calendar form-icon"></i>
                            <input type="text" id="expiry" class="form-control" placeholder="MM/YY" required>
                        </div>
                        <div class="form-group">
                            <label for="cvc" class="form-label">Security Code</label>
                            <i class="fas fa-lock form-icon"></i>
                            <input type="text" id="cvc" class="form-control" placeholder="CVC" required>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <input type="checkbox" id="save-info">
                <label for="save-info">Save my information for next time</label>
            </div>
            
            <button type="submit" class="btn">Complete Purchase</button>
            <button type="button" class="btn btn-secondary">Return to Cart</button>
        </form>
    </div>
    
    <div class="order-summary">
        <h2 class="summary-title">Order Summary</h2>
        
        <div class="product-item">
            <img src="https://images.unsplash.com/photo-1547949003-9792a18a2601?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3" alt="Wilderness Jacket" class="product-image">
            <div class="product-details">
                <h3 class="product-name">Wilderness Jacket</h3>
                <p class="product-variant">Size: Medium, Color: Forest Green</p>
                <p class="product-price">$149.99</p>
            </div>
        </div>
        
        <div class="product-item">
            <img src="https://images.unsplash.com/photo-1516478177764-9fe5bd7e9717?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3" alt="Trail Runner Boots" class="product-image">
            <div class="product-details">
                <h3 class="product-name">Trail Runner Boots</h3>
                <p class="product-variant">Size: 9.5, Color: Brown</p>
                <p class="product-price">$89.99</p>
            </div>
        </div>
        
        <div class="summary-totals">
            <div class="summary-line">
                <span>Subtotal</span>
                <span>$239.98</span>
            </div>
            <div class="summary-line">
                <span>Shipping</span>
                <span>$8.99</span>
            </div>
            <div class="summary-line">
                <span>Estimated Tax</span>
                <span>$12.00</span>
            </div>
            <div class="summary-line total">
                <span>Total</span>
                <span>$260.97</span>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<%- include('partials/scripts') %>
<script>
    // Simple card number formatting
    document.getElementById('cardNumber').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        let formattedValue = '';
        for(let i = 0; i < value.length; i++) {
            if(i > 0 && i % 4 === 0) {
                formattedValue += ' ';
            }
            formattedValue += value[i];
        }
        e.target.value = formattedValue;
    });
    
    // Simple MM/YY formatting
    document.getElementById('expiry').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if(value.length > 2) {
            e.target.value = value.substring(0, 2) + '/' + value.substring(2, 4);
        } else {
            e.target.value = value;
        }
    });
</script>